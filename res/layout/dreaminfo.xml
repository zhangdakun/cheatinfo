<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/dreaminfo_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/b1"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/adLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >
    </LinearLayout>
    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@id/dreaminfo_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="0.0dip"
        android:layout_weight="1.0" >

        <TextView
            android:id="@id/dream_info_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_c1"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/dream_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dream_info_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="10.0dip"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="@color/text_c1"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/dream_info_back_layout"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <ImageButton
            android:id="@id/dream_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@string/app_name"
            android:src="@drawable/recover" />
    </LinearLayout>

</LinearLayout>